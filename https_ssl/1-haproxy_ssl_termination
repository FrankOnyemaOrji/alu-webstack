global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    user haproxy
    group haproxy
    daemon
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http-in
    bind *:80
    bind *:443 ssl crt /etc/letsencrypt/live/www.frankonyema.tech/haproxy.pem
    redirect scheme https code 301 if !{ ssl_fc }
    mode http
    default_backend backend_servers

backend backend_servers
    balance roundrobin
    mode http
    option httpchk
    http-check expect status 200
    server web-01 3.94.98.53:80 check
    server web-02 54.145.224.181:80 check
